#!/usr/bin/env node

/**
 * Command dependencies.
 */

const exec = require('cross-spawn')
const args = process.argv.slice(2)
const argv = require('minimist')(args)
const name = argv._[1]


// npm install plugin
exec('npm', ['install', '-g', name], {
  stdio: 'inherit'
}).on('close', code => {
  console.log('install')
  process.exit(code)
})
